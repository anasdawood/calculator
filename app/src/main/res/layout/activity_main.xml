<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_activity_selector">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/final_exam"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="50dp"
        android:paddingTop="10dp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/current_grade"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"
        android:padding="10dp"
        ></TextView>

    <EditText
        android:id="@+id/editTextCurrentGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:hint="0.0"
        android:textColor="@color/white"
         />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/grade_goal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"></TextView>

    <EditText
        android:id="@+id/editTextGradeGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:hint="0.0"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/weight_of_final"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"></TextView>

    <EditText
        android:id="@+id/editTextWeightOdFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:hint="0.0"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Calculate -"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:onClick="calculate"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/textViewRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="15dp"></TextView>

</LinearLayout>